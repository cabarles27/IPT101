<Window x:Class="CabarlesWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Point of Sale System" Height="600" Width="950" Background="#f5f5f5" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Point of Sale System"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border Background="White" CornerRadius="10" Padding="15" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Add Item to Cart" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="Item Name:"/>
                    <ComboBox Margin="0,5,0,10" Height="30">
                        <ComboBoxItem Content="Coffee"/>
                        <ComboBoxItem Content="Sandwich"/>
                        <ComboBoxItem Content="Cake"/>
                        <ComboBoxItem Content="Juice"/>
                    </ComboBox>

                    <TextBlock Text="Quantity:"/>
                    <TextBox Margin="0,5,0,10" Height="30"/>

                    <TextBlock Text="Price per Item:"/>
                    <TextBox Margin="0,5,0,10" Height="30"/>

                    <Button Content="Add to Cart" Height="35" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="15" BorderBrush="#DDD" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TextBlock Text="Current Order" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Item" Width="*"/>
                                <DataGridTextColumn Header="Qty" Width="Auto"/>
                                <DataGridTextColumn Header="Price" Width="*"/>
                                <DataGridTextColumn Header="Total" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,15,0,0">
                        <TextBlock Text="Total Amount:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right"/>
                        <TextBlock Text="₱0.00" FontSize="22" FontWeight="Bold" Foreground="#007ACC" HorizontalAlignment="Right" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="New Order" Width="100" Margin="5" Background="#6c757d" Foreground="White"/>
                            <Button Content="Pay" Width="100" Margin="5" Background="#28a745" Foreground="White"/>
                            <Button Content="Cancel" Width="100" Margin="5" Background="#dc3545" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <TextBlock Grid.Row="2" Text="© 2025 POS Demo - WPF UI Only"
                   HorizontalAlignment="Center"
                   FontSize="12" Foreground="Gray" Margin="0,15,0,0"/>
    </Grid>
</Window>
